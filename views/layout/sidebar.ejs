<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    if (window.location.pathname == "/trade") {
        $("#tradeSide").removeClass()
            .addClass("tradeSelected")
    } else if (window.location.pathname == "/analytics") {
        $("#analayticsS").removeClass()
            .addClass("AnSelected")
    }
    else if (window.location.pathname == "/currency") {
        $("#currencySide").removeClass()
            .addClass("CuSelected")
    }
    else if (window.location.pathname == "/contact") {
        $("#contactSide").removeClass()
            .addClass("CoSelected")
    }
    else if (window.location.pathname == "/about") {
        $("#aboutSide").removeClass()
            .addClass("AbSelected")
    }
    $("#tradeSide").on("click", () => {
        if (window.location.pathname == "/trade") {
            alert("You Are In The Trade Page")
        } else {
            window.location.replace("/trade");
        }
    })
    $("#analayticsS").on("click", () => {
        if (window.location.pathname == "/analytics") {
            alert("You Are In The Analytics Page")
        } else {
            window.location.replace("/analytics");
        }
    })
    $("#currencySide").on("click", () => {
        if (window.location.pathname == "/currency") {
            alert("You Are In The Currency Converter Page")
        } else {
            window.location.replace("/currency");
        }
    })
    $("#contactSide").on("click", () => {
        if (window.location.pathname == "/contact") {
            alert("You Are In The Contact Page")
        } else {
            window.location.replace("/contact");
        }
    })
    $("#aboutSide").on("click", () => {
        if (window.location.pathname == "/about") {
            alert("You Are In The About Page")
        } else {
            window.location.replace("/about");
        }
    })
</script>